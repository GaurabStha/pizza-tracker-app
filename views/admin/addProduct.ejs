<section class="login flex justify-center pt-24">
    <div class="w-full max-w-xs pt-24">
        <form action="/admin/addproducts" method="POST" enctype="multipart/form-data" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <% if(messages.error) { %>
                <span id="error-alert" class="text-red-500 font-bold text-sm"><%= messages.error%> </span>
                <% } %>
                    <div class="mb-4">
                        <label for="name" class="block text-gray-700 text-sm font-bold mb-2">Name of item</label>
                        <input type="text" name="name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="name" placeholder="Enter the name of the item." value="<%= messages.name %>">
                    </div>
                    <div class="mb-4">
                        <label for="price" class="block text-gray-700 text-sm font-bold mb-2">Price</label>
                        <input type="number" name="price" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="price" placeholder="Enter the price." value="<%= messages.price %>">
                    </div>
                    <div class="mb-4">
                        <label for="size" class="block text-gray-700 text-sm font-bold mb-2">Size</label>
                        <input type="text" name="size" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="size" placeholder="Enter the size." value="<%= messages.size %>">
                    </div>
                    <div class="mb-4">
                        <label for="image" class="block text-gray-700 text-sm font-bold mb-2">Image</label>
                        <input type="file" name="image" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="image" placeholder="Choose the image.">
                    </div>
                    <div class="flex items-center justify-between">
                        <button type="submit" class="btn-primary text-white font-bold py-2 px-4 rounded-full focus:outline-none focus:shadow-outline"><span class="text-xl">+</span> &nbsp; Add Product</button>
                    </div>
        </form>
    </div>
</section>